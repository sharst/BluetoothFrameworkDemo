<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:gravity="center"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center" >
        
               
        <Button
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:onClick="searchDevices"
            android:text="Select device" 
            android:layout_marginBottom="50dip"/>
        

        <Button
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:onClick="sendFloatArray"
            android:text="Send float array" />

        <Button
            android:layout_marginTop="20dip"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:onClick="sendIntArray"
            android:text="Send int array" />
        
        
       <TextView 
            android:layout_marginTop="30dip"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:text="Device address: "
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
       
              
       <TextView 
            android:id="@+id/dev_address"
            android:layout_marginTop="5dip"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@android:color/white"/>
        
        <TextView 
            android:layout_marginTop="30dip"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:text="Sent data: "
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
                
        <TextView 
            android:id="@+id/sentText"
            android:layout_marginTop="5dip"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"/>
        
        <TextView 
            android:layout_marginTop="30dip"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:text="Received data: "
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
        
        <TextView 
            android:id="@+id/recvText"
            android:layout_marginTop="5dip"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>